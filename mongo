# mongodb.conf

# data lives here
dbpath=C:\Program Files\MongoDB\data\db

# where to log
logpath=C:\Program Files\MongoDB\log\mongo.log
logappend=true

# only run on localhost for development
bind_ip = 127.0.0.1                                                             

port = 27017
rest = true

auth = true


